
<div class="container" style="width:600px;">
  <div class="row justify-content-center">
    <div class="col-12">
      <br>
      <p id="notice"><%= notice %></p>
      <div class="card-trip ">
        <%= cl_image_tag @bike.photo.key %>

        <div class="card-trip-infos">
          <div>
            <p>
              <strong>Brand:</strong>
              <%= @bike.brand %>
            </p>

            <p>
            <strong>Frame Size:</strong>
              <%= @bike.frame_size %>
            </p>

            <p>
              <strong>Type of Bike:</strong>
              <%= @bike.bike_type %>
            </p>

            <p>
              <strong>Location:</strong>
              <%= @bike.location %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @bike.description %>
            </p>

            <!-- <p>
              <strong>User:</strong>
              <%#= @bike.user_id %>
            </p> -->
          </div>
          <h2 class="card-trip-pricing">â‚¬15.00</h2>
        </div>
      </div>
      <br>
      <div class="link_button">
        <p><%= link_to 'Book', new_bike_booking_path(@bike), class: "btn btn-ghost-filled"%></p>
        <p><%= link_to 'Back to our bikes', bikes_path, class: "btn btn-ghost"%></p>
      </div>
    </div>

<div class="container" style="width:400px;">
  <div class="row justify-content-centre">
    <div class="col-12">
      <br>
      <h2>Book this bike</h2>
      <br>

      <%= simple_form_for [@bike, @booking] do |f| %>

        <div class="form-inputs">
          <%= f.input :dates %>
        </div>

        <div class="button">
          <div class="row justify-content-center">
          
          <p><%= f.submit "Book your Bike", class: "btn-ghost-filled" %>
          <%= link_to 'Bike list', bikes_path, class: "btn btn-ghost"%>
          </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



