

<h2 class="text-center mt-2">
    Bookings list
</h2>
<div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap" > 
      <% @bookings.each do |booking| %>
        <span class=" m-1.5 pb-1 mt-1.5">
          <div class="p-2 mb-2 bg-white">  
            <div class="card-product"> 
              <div class="card-product img">
                <%= cl_image_tag bike.photo.key %>
            </div>
                <h4><b>You have booked this bike</b></h4>
                <div class="card-product p">
                  <p><b>Brand</b> : <%=bike.brand%></p>
                  <p><b>Frame size</b> : <%=bike.frame_size%></p>
                  <p><b>Type</b> : <%=bike.bike_type%></p>
                  <p><b>Description</b> : <%=bike.description%></p>
                </div>
              </div>
          </div> 
            <div class="link_button p-1">
              <p><%= link_to 'Bike list', bikes_path, class: "btn-ghost-filled" %></p>
            </div>
          </div>
        </span>
      <% end %>
</div>



