
<h2 class="text-center mt-2">
    Bookings 
</h2> 
  <div class="container" style="display: flex; justify-content: space-between; flex-wrap: wrap">>
    <% @bookings.each do |booking| %>
      <% bike = booking.bike %>
      <div class="card" style="width: 20rem">
        <%= cl_image_tag bike.photo.key %>
          <div class="card-body">
            <h4 class="card-title"><b>You have booked this bike</b></h4>
              <div class="card-text">
                <p><b>Brand</b> : <%=booking.bike.brand%></p>
                <p><b>Frame size</b> : <%=bike.frame_size%></p>
                <p><b>Type</b> : <%=bike.bike_type%></p>
                <p><b>Description</b> : <%=bike.description%></p> 
              </div>
              <h2 class="card-trip-pricing">â‚¬45 Total</h2>
          </div>
          <div class="link_button p-1">
            <p><%= link_to 'Accept', bikes_path, class: "btn-ghost-filled" %>
            <%= link_to 'Decline', bikes_path, class: "btn btn-ghost" %></p>
            <p><%= link_to 'Bike list', bikes_path, class: "btn btn-ghost" %></p>
          </div>
      </div>
    <% end %>
  </div
